@import "../../template/template.wxss";
@import "../../template1/template1.wxss";
.clearfix:after{
  content:'';
  display:block;
  clear:both;
}
.biggest{
  width:750rpx;
  background-color:#f1f1f5;
  color:#bfbfbf;
}
view.search {
  display: flex;
  flex-direction: row;
  height: 98rpx;
  background: #efeff4;
  align-items: center;
}

view.searchItem {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

view.searchItem input {
    flex: 1;
    font-size: 30rpx;
}
swiper{
  width:100%;
  height:300rpx;
}
swiper image{
  width:100%;
  height:100%;
}
.course{
  margin:20rpx 0;
}
.course > view{
  float: left;
  margin:0 60rpx;
}
.course > view image{
  width: 60rpx;
  height:60rpx;
}
.course .title{
  font-size: 26rpx;
}
.announcement{
  width:100%;
  height:70rpx;
  margin:20rpx 0;
  border-top: 2rpx solid #ccc; 
  background-color:#fefefe;
}
.ant-title{
  float:left;
  height:100%;
  line-height:70rpx;
  font-size:28rpx;
}
.ant-img{
  float:right;
  height:100%;
  width:100rpx;
  padding:0 20rpx;
  line-height:70rpx;
  border-left:2rpx solid #ccc;
  color:#ff33cc;
  font-size:26rpx;
  text-align:right; 
}
.ant-img image{
  width:32rpx;
  height: 32rpx;
}
.update{
  background-color:#fefefe;
  /* margin-bottom: 40rpx; */
}
.big-title{
  height:120rpx;
  text-align:center;
  line-height:120rpx;
  color:#000;
  font-size:36rpx;
  font-weight: bolder;
}
.four-course > view{
  margin:20rpx 0;
  background-color:#fefefe;
}

